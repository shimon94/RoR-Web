<h2>שינוי <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>מחכים לאישור: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(השאר ריק אם אתה לא רוצה לשנות )</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> מינימום תווים</em>
    <% end %>
    
  </div>
      אותיות ומספרים חובה
<br>
<br>
  <div class="field">
    <%= f.label :password_confirmation, "סיסמא חדשה" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "סיסמא חדשה" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "אישור סיסמא" %> <br />
    <%= f.password_field :current_password, autocomplete: "אישור סיסמא" %>
  </div>

  <div class="actions">
    <%= f.submit "עדכן" %>
  </div>
<% end %>

<h3>בטל את החשבון</h3>

<p>?לא מרוצה <%= button_to "בטל חשבון", registration_path(resource_name), data: { confirm: "?בטוח" }, method: :delete %></p>

<%= link_to "חזור", :back %>
